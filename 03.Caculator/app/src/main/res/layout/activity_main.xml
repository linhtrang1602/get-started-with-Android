<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="317dp"
        android:layout_height="265dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="#dedede"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" >

        <TextView
            android:id="@+id/enterNum"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="4dp"
            android:autoSizeTextType="uniform"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/teal_700"
            android:textSize="70sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/expressionText"
            android:layout_width="315dp"
            android:layout_height="142dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:autoSizeTextType="uniform"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/enterNum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="323dp"
        android:layout_height="383dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.746"
        app:layout_constraintStart_toStartOf="parent">>

        <Button
            android:id="@+id/CE"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="clearNum"
            android:text="CE" />

        <Button
            android:id="@+id/C"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="clearAll"
            android:text="C" />

        <Button
            android:id="@+id/BE"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="clearOne"
            android:text="BE" />

        <Button
            android:id="@+id/divide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="calculate"
            android:text="/" />

        <Button
            android:id="@+id/n7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="7" />

        <Button
            android:id="@+id/n8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="8" />

        <Button
            android:id="@+id/n9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="9" />

        <Button
            android:id="@+id/multi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="calculate"
            android:text="x" />

        <Button
            android:id="@+id/n4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="4" />

        <Button
            android:id="@+id/n5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="5" />

        <Button
            android:id="@+id/n6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="6" />

        <Button
            android:id="@+id/sub"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="calculate"
            android:text="-" />

        <Button
            android:id="@+id/n1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="1" />

        <Button
            android:id="@+id/n2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="2" />

        <Button
            android:id="@+id/n3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="3" />

        <Button
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="calculate"
            android:text="+" />

        <Button
            android:id="@+id/nega"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="changeSign"
            android:text="+/-" />

        <Button
            android:id="@+id/n0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="#B3E5DA"
            android:textColor="#265959"
            android:onClick="enterNumber"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:text="." />

        <Button
            android:id="@+id/equal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="calculate"
            android:text="=" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>